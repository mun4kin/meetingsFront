{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "build",
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "**/node_modules/*",
    "**/_assets/*",
    "**/build/*",
    "**/scripts/*",
    "**/acceptance-tests/*",
    "**/webpack/*",
    "**/jest/*",
    "**/setupTests.ts"
  ],
  "include": [
    "src"
  ],
  "esModuleInterop": true
}
